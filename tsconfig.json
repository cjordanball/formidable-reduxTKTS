{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@app/*": ["./src/*"],
            "@comps/*": ["./src/components/*"],
            "@screens/*": ["./src/screens/*"]
        },
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "isolatedModules": true,
      "jsx": "react-native",
      "lib": ["DOM", "ESNext"],
      "moduleResolution": "node",
      "noEmit": true,
      "strict": true,
      "target": "ESNext"
    },
    "exclude": [
      "node_modules",
      "babel.config.js",
      "metro.config.js",
      "jest.config.js"
    ]
  }